<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sphere_bg"
    tools:context=".sphere">

    <TextView
        android:id="@+id/sphereCalc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/productsans"
        android:text="Sphere Volume"
        android:textAlignment="center"
        android:textSize="32sp"
        android:textStyle="normal"
        android:textColor="#012E03"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/radius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="69dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="69dp"
        android:hint="enter radius"
        android:fontFamily="@font/productsans"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sphereCalc" />

    <TextView
        android:id="@+id/SphereResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="69dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="69dp"
        android:fontFamily="@font/productsans"
        android:text=""
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calc" />

    <Button
        android:id="@+id/calc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="69dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="69dp"
        android:fontFamily="@font/productsans"
        android:text="Calculate"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radius" />


</androidx.constraintlayout.widget.ConstraintLayout>